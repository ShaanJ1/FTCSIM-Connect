{
    "manifest_version": 3,
    "name": "FTCSIM Connect",
    "version": "1.1.0",
    "description": "Code directly in VS Code instead of having to use FTCSIM's web onbot java editor",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://ftcsim.org/*"
    ],
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://ftcsim.org/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "FTCSIM Connect"
    },
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "bridge.js",
                "logger.js"
            ],
            "matches": [
                "https://ftcsim.org/*"
            ]
        }
    ]
}